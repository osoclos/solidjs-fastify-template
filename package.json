{
    "name": "solidjs-fastify-template",
    "description": "A simple fullstack template to start building a website quickly with custom server-side code",
    "type": "module",
    "version": "0.0.0",

    "private": true,

    "author": "osoclos",
    "license": "MIT",

    "scripts": {
        "dev": "bun run --watch --tsconfig-override=tsconfig.node.json index.ts --dev",
        "dev-host": "bun run --watch --tsconfig-override=tsconfig.node.json index.ts --dev --host",

        "build": "vite build && tsc",

        "start": "bun run dist/server/index.js",
        "start-host": "bun run dist/server/index.js --host"
    },

    "dependencies": {
        "@fastify/vite": "^8.2.0",
        "@types/bun": "^1.2.21",
        "fastify": "^5.6.0",
        "solid-js": "^1.9.9"
    },

    "devDependencies": {
        "@tailwindcss/vite": "^4.1.13",
        "tailwindcss": "^4.1.13",
        "typescript": "~5.8.3",
        "vite": "^7.1.5",
        "vite-plugin-solid": "^2.11.8"
    }
}
